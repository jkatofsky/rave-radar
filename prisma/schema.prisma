generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum OrganizerType {
  BarOrClub
  EventCollective
  MusicFestival
}

model Organizer {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  // TODO: slight issue: this updates whenever we add a review, since there are the denormalized fields
  // So, when fleshing out the editing system, I'll need to rely on other information to timestamp the REAL last organizer update
  updatedAt DateTime @updatedAt

  name      String
  type      OrganizerType
  websites  String[]
  locations Location[]

  reviews   Review[]
  // TODO: decide if all of this denormalization is worth it.
  // Calculating this stuff on-the-fly would be more maintainable, but certainly slower
  topGenres Genre[]

  overallExpensiveness Int?

  reviewCount Int

  overallRating          Float?
  soundSystemRating      Float?
  djAndMusicRating       Float?
  crowdPlurRating        Float?
  safetyAndComfortRating Float?
  venueRating            Float?
  valueForMoneyRating    Float?
  visualsRating          Float?
  staffRating            Float?
  foodAndDrinkRating     Float?
}

model City {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  locations Location[]

  city    String
  country String
}

model Location {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organizer   Organizer @relation(fields: [organizerId], references: [id])
  organizerId Int

  streetAddress     String?
  postalCode        String?
  region            String?
  city              City    @relation(fields: [cityId], references: [id])
  cityId            Int
  googleMapsPlaceId String?

  // TODO: lat/lng? Can be cached from maps API for up to 30 days...
}

enum Genre {
  House
  DeepHouse
  ProgressiveHouse
  TechHouse
  AcidHouse
  TropicalHouse
  FutureHouse
  AfroHouse
  Techno
  Psytrance
  MelodicTechno
  HardTechno
  AcidTechno
  Trance
  Dubstep
  MelodicDubstep
  Brostep
  Chillstep
  DrumAndBass
  Hardstyle
  Ambient
  Disco
  Funk
  Trap
  Electro
  Garage
  Breakbeat
  Chillout
  BigRoom
  BassHouse
  Hyperpop
  Jungle
  Downtempo
}

model Review {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organizer   Organizer @relation(fields: [organizerId], references: [id])
  organizerId Int

  description String?
  genres      Genre[]

  expensiveness Int?

  soundSystemRating      Int
  djAndMusicRating       Int
  crowdPlurRating        Int
  safetyAndComfortRating Int
  venueRating            Int
  valueForMoneyRating    Int
  visualsRating          Int?
  staffRating            Int?
  foodAndDrinkRating     Int?

  // TODO: images

  // TODO: upvotes
}
